<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="address" class="com.hand.pojo.Address">
        <property name="address" value="北京"/>
    </bean>

    <bean id="student" class="com.hand.pojo.Student">
        <!--普通注入 value-->
        <property name="name" value="太帅"/>
        <!--bean注入 ref-->
        <property name="address" ref="address"/>
        <!--数组注入-->
        <property name="books">
            <array>
                <value>红楼梦</value>
                <value>西游记</value>
                <value>水浒传</value>
                <value>三国演义</value>
            </array>
        </property>

        <!--list注入-->
        <property name="hobbys">
            <list>
                <value>打篮球</value>
                <value>看电影</value>
            </list>
        </property>

        <!--set注入-->
        <property name="games">
            <set>
                <value>coc</value>
                <value>bob</value>
            </set>
        </property>

        <!--map注入-->
        <property name="cards">
            <map>
                <entry key="身份证" value="46131613132128"/>
                <entry key="银行卡" value="6453135841851"/>
            </map>
        </property>

        <!--null注入-->
        <property name="wife">
            <null/>
        </property>

        <!--Properties注入-->
        <property name="info">
            <props>
                <prop key="num">20204461318548</prop>
                <prop key="sex">男</prop>
            </props>
        </property>
    </bean>

</beans>